<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="A.BasePage"
             Title="BasePage">
    <Grid>
        
        <ContentView x:Name="MainContent">
            <ContentView.Content>
                <!-- Placeholde for pages content view -->
            </ContentView.Content>
        </ContentView>

        <Grid x:Name="LoadingOverlay" IsVisible="{Binding IsBusy, Source={x:Reference BasePage}}" 
              BackgroundColor="Black"
              Opacity="0.5"
              VerticalOptions="FillAndExpand"
              HorizontalOptions="FillAndExpand">
            <ActivityIndicator x:Name="LoadingIndicator" IsRunning="{Binding IsBusy, Source={x:Reference BasePage}}"
                               VerticalOptions="Center" 
                               HorizontalOptions="Center" 
                               Color="White"/>
        </Grid>
    </Grid>
</ContentPage>