<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomControlsLibrary.Controls.CustomEntry">
    <VerticalStackLayout>

        <Entry x:Name="MainEntry" Unfocused="MainEntry_TextAdded" Completed="MainEntry_TextAdded" 
               Placeholder="{Binding Placeholder, Source={x:Reference CustomEntry}}"
               TextColor="{Binding TextColor, Source={x:Reference CustomEntry}}"
               Keyboard="{Binding Keyboard, Source={x:Reference CustomEntry}}"
        />

        <Label x:Name="LblError" HorizontalOptions="Start" TextColor="Red" FontSize="Small"
               IsVisible="{Binding IsErrorVisible}"
               Text="{Binding ErrorMessage}" />
        
    </VerticalStackLayout>
</ContentView>
